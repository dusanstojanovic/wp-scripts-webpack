{
	"extends": ["plugin:@wordpress/eslint-plugin/esnext"],
	"env": {
		"browser": true
	},
	"rules": {
		"space-in-parens": ["error", "never"],
		"array-bracket-spacing": ["error", "never"],
		"arrow-parens": ["error", "as-needed"],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "ignore",
				"named": "ignore",
				"asyncArrow": "ignore"
			}
		]
	}
}
